<%- include("partials/header"); %>

<h1>
	Edit <%=shoe.name%>
</h1>


<form action = "/shoes/<%=shoe._id%>/?_method=PUT" method="post">
	<input type="String" name= "shoe[name]" placeholder="name" value = "<%=shoe.name%>">
	<input type="String" name= "shoe[image]" placeholder="image" value = "<%=shoe.image%>">
	<input type="String" name= "shoe[brand]" placeholder="brand" value = "<%=shoe.brand%>">
	<input type="String" name= "shoe[pair]" placeholder="pair" value = "<%=shoe.pair%>">
	
		
	<button class = "btn btn-primary">
		submit
	</button>
</form>

<%- include("partials/footer"); %>
