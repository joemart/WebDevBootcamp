<%- include ("partials/header"); %>


<div class = "container">
	<header class = "jumbotron">
		<div class = "container">
			<h1>
				 Campgrounds
			</h1>
			<p>
				View our handpicked campgroudns
			</p>
			<a class= "btn btn-primary btn-sm" href="/campgrounds/new"> Add new campground</a>
		</div>
			
	</header>

	

<div class = "row" style="display:flex; flex-wrap: wrap;">
		<div class="col-lg-12 col-md-12 col-sm-12 ">
			<h3>
				Our moust popular campground
			</h3>
		</div>
		<%campgrounds.forEach((campground)=>{%>
		<div class="col-md-3 col-sm-6 text-center">
			<div class = "thumbnail">
				
				<div class = "caption"><h4><%= campground.name %></h4></div>
				<img src = "<%=campground.image%>">
			</div>
			
		</div>
		<%});%>
	</div>
		

	
<div class = "row">
	<div class = "container" style = "display:flex; flex-wrap:wrap;">
		<div class = "text-center col-lg-12 col-md-12 col-sm-12">
			<h1>
				 THis is my test
			</h1>
		</div>
		
		<%for(let i = 0; i<10; i ++){%>
		<div class = "col-sm-6 col-md-4 col-lg-3">
			<div class = "thumbnail">
				<div class = "caption text-center">
					<h4>
						<%=campgrounds[i%3].name%>
					</h4>
				</div>
				<img src="<%=campgrounds[i%3].image%>">
				
				
			</div>
		
		</div>
		<%}%>
	</div>	
</div>
	
</div>

<%- include ("partials/footer"); %>